<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/dip_10"
        android:layout_marginLeft="@dimen/dip_10"
        android:layout_height="@dimen/dip_01"
        android:background="#e0e0e0"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dip_10">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/dip_40"
            android:layout_height="@dimen/dip_40"
            android:scaleType="centerCrop"
            app:riv_oval="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dip">

            <TextView
                android:id="@+id/community_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字"
                android:textColor="@color/gray1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/community_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="3dip"
                android:text="5分钟"
                android:textColor="@color/gray1"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/community_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dip_50"
        android:paddingTop="@dimen/dip_10"
        android:paddingBottom="@dimen/dip_10"
        android:text="名字"
        android:textColor="@color/fond_community_textcolor"
        android:textSize="16sp" />
</LinearLayout>
