<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:paddingTop="19dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:onClick="backClick"
                android:padding="9dp"
                android:src="@mipmap/icon_back"
                android:tint="@color/bg_black" />

            <TextView
                android:id="@+id/my_notice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dip_10"
                android:paddingRight="@dimen/dip_20"
                android:text="女神聚集地"
                android:textColor="@color/bg_black"
                android:textSize="@dimen/fond_18sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_10"
        android:layout_marginTop="@dimen/dip_20"
        android:layout_marginRight="@dimen/dip_10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/community_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="社区简介"
                android:textColor="@color/fond_community_textcolor"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/follow_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/bg_bouns3"
            android:gravity="center"
            android:paddingLeft="@dimen/dip_15"
            android:paddingTop="@dimen/dip_3"
            android:paddingRight="@dimen/dip_15"
            android:paddingBottom="@dimen/dip_3"
            android:text="+关注"
            android:textColor="@color/white"
            android:textSize="@dimen/fond_12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/community_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_10"
        android:paddingLeft="@dimen/dip_10"
        android:text="闲聊、灌水畅所欲言"
        android:textColor="#9B9B9B"
        android:textSize="@dimen/fond_13sp" />

    <RelativeLayout
        android:id="@+id/haderImagell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_10"
        android:layout_marginTop="@dimen/dip_15"
        android:layout_marginRight="@dimen/dip_10"
        android:background="@drawable/bg_commun"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dip_5"
        android:paddingBottom="@dimen/dip_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dip_10"
            android:text="最的活跃用户"
            android:textColor="#9B9B9B"
            android:textSize="@dimen/fond_14sp" />

        <LinearLayout
            android:id="@+id/ll_minImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dip_5"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/had1"
                android:layout_width="@dimen/dip_20"
                android:layout_height="@dimen/dip_20"
                android:layout_marginRight="@dimen/dip_5"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_test"
                app:riv_border_color="#333333"
                app:riv_corner_radius="@dimen/dip_30"
                app:riv_mutate_background="true"
                app:riv_tile_mode="repeat" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/had2"
                android:layout_width="@dimen/dip_20"
                android:layout_height="@dimen/dip_20"
                android:layout_marginRight="@dimen/dip_5"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_test"
                app:riv_border_color="#333333"
                app:riv_corner_radius="@dimen/dip_30"
                app:riv_mutate_background="true"
                app:riv_tile_mode="repeat" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/had3"
                android:layout_width="@dimen/dip_20"
                android:layout_height="@dimen/dip_20"
                android:layout_marginRight="@dimen/dip_5"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_test"
                app:riv_border_color="#333333"
                app:riv_corner_radius="@dimen/dip_30"
                app:riv_mutate_background="true"
                app:riv_tile_mode="repeat" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/had4"
                android:layout_width="@dimen/dip_20"
                android:layout_height="@dimen/dip_20"
                android:layout_marginRight="@dimen/dip_5"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_test"
                app:riv_border_color="#333333"
                app:riv_corner_radius="@dimen/dip_30"
                app:riv_mutate_background="true"
                app:riv_tile_mode="repeat" />

            <ImageView
                android:layout_width="@dimen/dip_25"
                android:layout_height="@dimen/dip_25"
                android:layout_gravity="center"
                android:src="@mipmap/icon_arrow_right_2" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_10"
        android:layout_marginTop="@dimen/dip_20"
        android:layout_marginRight="@dimen/dip_10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="社区ICON"
                android:textColor="@color/fond_community_textcolor"
                android:textSize="16sp" />
        </LinearLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/had5"
            android:layout_width="@dimen/dip_30"
            android:layout_height="@dimen/dip_30"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dip_5"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_test"
            app:riv_border_color="#333333"
            app:riv_corner_radius="@dimen/dip_30"
            app:riv_mutate_background="true"
            app:riv_tile_mode="repeat" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dip_10"
        android:layout_marginRight="@dimen/dip_10"
        android:layout_marginTop="@dimen/dip_10"
        android:layout_height="@dimen/dip_1"
        android:background="#f0f0f0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_10"
        android:layout_marginTop="@dimen/dip_10"
        android:layout_marginRight="@dimen/dip_10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="社区名称"
                android:textColor="@color/fond_community_textcolor"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dip_10"
            android:text="最的活跃用户"
            android:textColor="#9B9B9B"
            android:textSize="@dimen/fond_13sp" />
    </RelativeLayout>
</LinearLayout>
